@page
@model global::Quadruped.WebInterface.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}
<link rel="stylesheet" href="~/css/RobotController.css" />
<div id="telemetrics_display" class="telemetricsDisplay">
    <strong>Temperature</strong> {{ averageTemperature.toFixed(2) }} &deg;C
    <strong>Voltage</strong> {{ averageVoltage.toFixed(2) }} V
    <strong>1/3</strong> {{ (averageVoltage / 3).toFixed(2) }} V
</div>
<div class="joystick moveJoystick" id="move_joystick_zone">
    <strong>Move joystick</strong>
    <div>Angle: {{ angle.toFixed(2) }} Distance: {{ distance.toFixed(2) }}</div>
</div>
<div class="joystick rotationJoystick" id="rotate_joystick_zone">
    <strong>Rotation joystick</strong>
    <div>Angle: {{ angle.toFixed(2) }} Distance: {{ distance.toFixed(2) }}</div>
</div>

@section scripts {
    <script src="~/lib/nipplejs/dist/nipplejs.min.js"></script>
    <script src="~/js/RobotController.js"></script>
}
